<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_container_view"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:background="@color/blue_light"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="60dp"
        android:id="@+id/container_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/main"/>

        <TextView
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Главное меню"
            android:layout_gravity="center_vertical"
            android:textColor="@color/kfu_blue"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/container_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/face_profile"/>

        <TextView
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Обо мне"
            android:layout_gravity="center_vertical"
            android:textColor="@color/kfu_blue"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/container_statement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_statement"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/statement"/>

        <TextView
            android:id="@+id/btn_statement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Заказать справку"
            android:layout_gravity="center_vertical"
            android:textColor="@color/kfu_blue"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/container_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_schedule"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/calendar"/>

        <TextView
            android:id="@+id/btn_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Расписание"
            android:layout_gravity="center_vertical"
            android:textColor="@color/kfu_blue"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/container_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_contacts"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/contacts"/>

        <TextView
            android:id="@+id/btn_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Контакты"
            android:layout_gravity="center_vertical"
            android:textColor="@color/kfu_blue"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:foregroundGravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="bottom"
        >

        <ImageView
            android:id="@+id/iv_vk"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/vk_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_tg"
            app:layout_constraintStart_toStartOf="parent"

            />

        <ImageView
            android:id="@+id/iv_tg_chat"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/tg_chat_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_tg" />

        <ImageView
            android:id="@+id/iv_tg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/tg_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_tg_chat"
            app:layout_constraintStart_toEndOf="@id/iv_vk" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>