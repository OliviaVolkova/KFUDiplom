<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp"
    android:paddingHorizontal="20dp"
    android:layout_marginVertical="10dp"
    android:background="#FDFDFD"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/lesson_name"
        android:textSize="20sp"
        android:textColor="@color/kfu_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Геометрическая алгебра и алгебраическая геометрия">
    </TextView>
    <TextView
        android:textColor="@color/dark_grey"
        android:id="@+id/lesson_time"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lesson_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lesson_teacher"
        android:text="8:30-10:00"
        android:paddingBottom="20dp">
    </TextView>
    <TextView
        android:id="@+id/lesson_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lesson_time"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:textColor="@color/purple_dark"
        android:text="Арсланов Марат Мирзаевич">
    </TextView>
    <TextView

        android:id="@+id/lesson_room"
        android:textColor="@color/dark_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lesson_teacher"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:textIsSelectable="true"
        android:text="102">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>